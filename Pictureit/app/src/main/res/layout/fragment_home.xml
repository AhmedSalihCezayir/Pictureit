<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/homepage_background">

        <Button
            android:id="@+id/buttonEasy"
            android:text="Easy"
            android:textColor="#FFFFFF"
            android:textSize="30sp"
            android:layout_width="240dp"
            android:layout_height="60dp"
            android:background="@drawable/easy_button_style"
            android:shadowColor="#A8A8A8"
            android:shadowRadius="5"
            android:layout_marginTop="150dp"
            android:layout_centerHorizontal="true"/>

        <Button
            android:id="@+id/buttonMedium"
            android:text="MEDIUM"
            android:textColor="#FFFFFF"
            android:textSize="30sp"
            android:layout_width="240dp"
            android:layout_height="60dp"
            android:background="@drawable/medium_button_style"
            android:shadowColor="#A8A8A8"
            android:shadowRadius="5"
            android:layout_below="@id/buttonEasy"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="50dp"/>

        <Button
            android:id="@+id/buttonHard"
            android:text="HARD"
            android:textColor="#FFFFFF"
            android:textSize="30sp"
            android:layout_width="240dp"
            android:layout_height="60dp"
            android:background="@drawable/hard_button_style"
            android:shadowColor="#A8A8A8"
            android:shadowRadius="5"
            android:layout_below="@id/buttonMedium"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="50dp"/>
</RelativeLayout>